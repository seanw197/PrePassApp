@model IEnumerable<PrePass.Models.Staff>

@{
    ViewData["Title"] = "Staff";
}

<h1>Staff</h1>

<p>
    <a asp-action="Create" asp-route-eid="@ViewBag.eid">Create New Staff Member</a>
</p>
<table class="table">
    <thead>
        <tr>

            <th>
                @Html.DisplayNameFor(model => model.EmpID)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Email)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.accessLevel)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Active)
            </th>

            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.EmpID)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Email)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.accessLevel)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Active)
            </td>

            <td>
                <a asp-action="Edit" asp-route-id="@item.EmpID" asp-route-eid="@ViewBag.eid">Edit</a>
                @*<a asp-action="Details" asp-route-eid="@ViewBag.eid">Details</a> |
        <a asp-action="Delete" asp-route-eid="@ViewBag.eid">Delete</a>*@
            </td>
        </tr>
        }
    </tbody>
</table>
